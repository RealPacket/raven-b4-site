---
interface Props {
	title: string;
	description: string;
	// expireTime: number;
}
const { title, description } = Astro.props;
---

<div class="notification">
	<div class="notification-content-container">
		<div class="notification-real-content">
			<p class="notification-title">{title}</p>
			<span class="title-line"></span>
			<p class="notification-description">{description}</p>
		</div>
	</div>
</div>

<style>
	.notification-real-content > p {
		color: white;
		justify-self: center;
	}
	.title-line {
		display: block;
		width: 90px;
		height: 2px;
		background: #444;
	}
	.notification {
		float: right;
		display: flex;
		align-items: center;
		/* align-self: center; */
		margin-top: 34vw;
		margin-right: 1vh;
		border-top: 4px;
		border-bottom: 4px;
	}
	.notification-content-container {
		background: linear-gradient(
			to right,
			rgb(240, 158, 255),
			rgb(179, 73, 255)
		);
	}
</style>
